<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
    <span class="badge badge-info">  <%= @user.followed_users.count %></span>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
    <span class="badge badge-info">  <%= @user.followers.count %></span>
    </strong>
    followers
  </a>
</div>